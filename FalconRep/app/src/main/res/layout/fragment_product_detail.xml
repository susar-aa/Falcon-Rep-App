<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- IMAGE GALLERY CONTAINER -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#F0F0F0">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Page Indicator -->
                <TextView
                    android:id="@+id/txtPageIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_indicator_pill"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="1 / 1"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Maximize Button -->
                <ImageButton
                    android:id="@+id/btnMaximizeImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start|bottom"
                    android:layout_margin="16dp"
                    android:src="@drawable/icons8_enlarge_50" />

                <!-- NEW: CLOSE BUTTON -->
                <ImageButton
                    android:id="@+id/btnCloseSheet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:src="@drawable/icons8_close_48"
                    android:elevation="4dp"/>
            </FrameLayout>

            <!-- PRODUCT DETAILS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/detailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Rs 0.00"
                    android:textColor="#E91E63"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- QUICK SELECT SLIDER -->
                <TextView
                    android:id="@+id/lblQuickSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Quick Select"
                    android:textAllCaps="true"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVariationSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:clipToPadding="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="#EEEEEE" />

                <!-- FULL VARIATION LIST -->
                <TextView
                    android:id="@+id/lblAllVariants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Options"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"/>

                <!-- This is the list we are redesigning -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVariations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="#EEEEEE" />

                <TextView
                    android:text="Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Product description..."
                    android:textSize="15sp"
                    android:textColor="#555555" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>